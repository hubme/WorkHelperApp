<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CircleView">
        <attr name="circle_color" format="color"/>
    </declare-styleable>

    <declare-styleable name="StepView">
        <attr name="step_circle_color" format="color"/>
        <attr name="step_circle_radius" format="dimension"/>
        <attr name="inner_text" format="string"/>
        <attr name="inner_text_color" format="color"/>
        <attr name="step_steps" format="integer"/>
    </declare-styleable>

    <declare-styleable name="gjjSwitchTitle">
        <attr name="tabTxtActiveColor" format="color"/>
        <attr name="tabTxtDisableColor" format="color"/>
        <attr name="tabLineColor" format="color"/>
        <attr name="tabTxtSize" format="dimension"/>
        <attr name="tabLineHeight" format="dimension"/>
        <attr name="tabsPadding" format="dimension"/>
        <attr name="tabIsShortLine" format="boolean"/>
        <attr name="tabLineTopIndent" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="CircleCenterTextView">
        <attr name="orientation" format="integer">
            <flag name="horizontal" value="1"/>
            <flag name="vertical" value="2"/>
        </attr>
        <attr name="circleColor" format="color"/>
        <attr name="radius" format="dimension"/>
        <attr name="text" format="string"/>
        <attr name="textColor" format="color"/>
        <attr name="textSize" format="dimension"/>
    </declare-styleable>

    <!--水波纹-->
    <declare-styleable name="RippleView">
        <attr name="rv_alpha" format="integer"/>
        <attr name="rv_framerate" format="integer"/>
        <attr name="rv_rippleDuration" format="integer"/>
        <attr name="rv_zoomDuration" format="integer"/>
        <attr name="rv_color" format="color"/>
        <attr name="rv_centered" format="boolean"/>
        <attr name="rv_type" format="enum">
            <enum name="simpleRipple" value="0"/>
            <enum name="doubleRipple" value="1"/>
            <enum name="rectangle" value="2"/>
        </attr>
        <attr name="rv_ripplePadding" format="dimension"/>
        <attr name="rv_zoom" format="boolean"/>
        <attr name="rv_zoomScale" format="float"/>

    </declare-styleable>

    <declare-styleable name="DrawableCenterTextView">
        <attr name="imageLeft" format="reference|color"/>
        <attr name="imageTop" format="reference|color"/>
        <attr name="imageRight" format="reference|color"/>
        <attr name="imageBottom" format="reference|color"/>
    </declare-styleable>

    <declare-styleable name="DashView">
        <attr name="dashColor" format="color"/>
        <attr name="dashWidth" format="dimension"/>
        <attr name="dashHeight" format="dimension"/>
        <attr name="intervalWidth" format="dimension"/>
        <attr name="dashOffset" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="TabLayout">
        <attr name="tabSelectedTitleColor" format="color"/>
        <attr name="tabUnselectedTitleColor" format="color"/>
        <attr name="tabTitleSize" format="reference"/>
        <attr name="tabImageWidth" format="dimension"/>
        <attr name="tabImageHeight" format="dimension"/>
        <attr name="tabTitleTopMargin" format="dimension"/>
        <attr name="tabBackgroundRes" format="reference"/>
    </declare-styleable>
</resources>