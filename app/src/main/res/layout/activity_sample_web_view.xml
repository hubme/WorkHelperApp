<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_sample_web_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.king.applib.base.webview.SimpleWebView
        android:id="@+id/web_my"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_input"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"/>

        <TextView
            android:id="@+id/tv_open_url"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="打开"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/panel_bottom_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_load_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="load url"/>

        <Button
            android:id="@+id/btn_invoke_js_method1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="java调js"/>

    </LinearLayout>
</LinearLayout>
