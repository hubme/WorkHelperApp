    <TextView
        android:id="@+id/tv_show_dialog"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="弹出"
        android:textSize="@dimen/ts_bigger"/>

    <ImageView
        android:id="@+id/image_before"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/tv_show_dialog"
        android:src="@mipmap/home_ad"/>

    <ImageView
        android:id="@+id/image_after"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/image_before"/>

    <com.king.applib.ui.customview.BadgeButton
        android:id="@+id/btn_badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_after"
        android:text="双方很"
        app:btnBadgeColor="@color/colorPrimary"
        app:btnBadgeText="双方东"
        app:btnBadgeVisible="true"/>

    <ImageView
        android:id="@+id/image1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_badge"
        android:src="@mipmap/icon_1"/>

    <ImageView
        android:id="@+id/image2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image1"
        android:src="@mipmap/icon_1"/>
