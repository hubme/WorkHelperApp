<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


    <ImageView
        android:id="@+id/iv_loading"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:visibility="gone"/>

    <CheckedTextView
        android:id="@+id/btn_change_anim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:background="@color/colorAccent"
        android:checked="false"
        android:padding="10dp"
        android:text="开始动画"
        android:visibility="gone"/>

    <com.king.app.workhelper.ui.customview.FormInputView
        android:id="@+id/form_item"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>

    <TextView
        android:id="@+id/haha"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@id/form_item"
        android:drawableRight="@mipmap/arrow_right"
        android:gravity="center_vertical"
        android:paddingRight="15dp"
        android:text="哈哈哈"/>

    <com.king.app.workhelper.ui.customview.DrawableEditText
        android:id="@+id/xedittext"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/haha"
        android:background="@color/transparent"
        android:drawableLeft="@mipmap/arrow_right"
        android:lines="1"
        android:maxLines="1"
        android:singleLine="true"
        android:drawablePadding="10dp"
        android:drawableRight="@mipmap/arrow_right"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="双蓝佛双陈"/>

</RelativeLayout>