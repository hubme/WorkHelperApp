<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_alignParentBottom="true"
        android:background="#CC000000">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="23dp"
            android:text="分享到"
            android:textColor="@android:color/white"
            android:textSize="13sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/tv_we_chat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:drawableTop="@mipmap/share_wechat_solid"
                android:gravity="center"
                android:text="微信"
                android:textColor="#CCFFFFFF"
                android:textSize="13sp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="17dp"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:drawableTop="@mipmap/share_weixin_friends_solid"
                android:gravity="center"
                android:text="朋友圈"
                android:textColor="#CCFFFFFF"
                android:textSize="13sp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="17dp"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:drawableTop="@mipmap/share_weibo_solid"
                android:gravity="center"
                android:text="微博"
                android:textColor="#CCFFFFFF"
                android:textSize="13sp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="17dp"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:drawableTop="@mipmap/share_qq_solid"
                android:gravity="center"
                android:text="QQ"
                android:textColor="#CCFFFFFF"
                android:textSize="13sp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="17dp"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:drawableTop="@mipmap/share_qqzone_solid"
                android:gravity="center"
                android:text="QQ空间"
                android:textColor="#CCFFFFFF"
                android:textSize="13sp"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
