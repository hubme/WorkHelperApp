<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_image_sample"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_selfhelp_selector"
                android:gravity="center"
                android:text="图片压缩"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ImageView大图片无法显示.\neg.3120*4028 jpg 4.02M.但是获取的Bitmap不为null.\n压缩处理，宽高比"/>

            <ImageView
                android:id="@+id/iv_before_compressed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/home_ad"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="压缩后"/>

            <ImageView
                android:id="@+id/iv_after_compressed"
                android:layout_width="100dp"
                android:layout_height="100dp"/>

        </LinearLayout>


    </ScrollView>

</LinearLayout>