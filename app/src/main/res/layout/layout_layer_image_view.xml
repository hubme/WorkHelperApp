<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_simple_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_vertical"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/tv_image_layer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@id/iv_simple_image"
        android:layout_alignLeft="@id/iv_simple_image"
        android:layout_alignRight="@id/iv_simple_image"
        android:layout_alignTop="@id/iv_simple_image"
        android:layout_centerInParent="true"
        android:background="#99676767"
        android:gravity="center"
        android:text="哈哈"
        android:visibility="gone"/>

</RelativeLayout>