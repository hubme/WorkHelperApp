<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">


    <TextView
        android:id="@+id/tv_open_qq"
        style="@style/EntryItem"
        android:text="打开QQ或Tim"/>

    <TextView
        android:id="@+id/tv_open_email"
        style="@style/EntryItem"
        android:layout_height="200dp"
        android:background="@color/chocolate"
        android:text="打开邮箱"/>

    <TextView
        android:id="@+id/tv_transition_drawable_sample1"
        android:layout_width="48dp"
        android:layout_height="48dp"/>

    <TextView
        android:id="@+id/tv_transition_drawable_sample2"
        android:layout_width="48dp"
        android:background="@drawable/transition_simple"
        android:layout_height="48dp"/>
</LinearLayout>