<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_added"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_view_width"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="固定宽度(px)" />

    <TextView
        android:id="@+id/tv_permission"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/ripple_bg"
        android:gravity="center"
        android:text="添加 View" />

    <TextView
        android:id="@+id/tv_clear"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/ripple_bg"
        android:gravity="center"
        android:text="清空 View" />

    <TextView
        android:id="@+id/tv_remove_first"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/ripple_bg"
        android:gravity="center"
        android:text="移除首个 View" />

    <TextView
        android:id="@+id/tv_remove_last"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/ripple_bg"
        android:gravity="center"
        android:text="移除最后一个 View" />

    <com.king.app.workhelper.ui.customview.FlowLayout
        android:id="@+id/flow_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@color/aliceblue" />

</LinearLayout>